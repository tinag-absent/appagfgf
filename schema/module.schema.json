{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KaishokuModule",
  "description": "モジュール仕様書データのスキーマ",
  "type": "object",
  "required": ["id", "code", "name", "classification"],
  "additionalProperties": true,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^mod-\\d+$"
    },
    "code": {
      "type": "string",
      "pattern": "^M-"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "classification": {
      "type": "string"
    },
    "description": { "type": "string" },
    "range":       { "type": "string" },
    "duration":    { "type": "string" },
    "energy":      { "type": "string" },
    "developer":   { "type": "string" },
    "details":     { "type": "string" },
    "warning":     { "type": "string" }
  }
}
